{
    "manifest_version": 2,
    "name": "musi-rec",
    "version": "1.0",
    "description": "this extension will allow you to recognise the music playing in the current tab of the browser",
    "permissions": [
      "activeTab",
      "storage",
      "audioCapture"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      },
      "default_title": "MusiRec",
      "default_popup": "popup.html"
    }

  }
  